{
	"manifest_version": 2,

	"name": "Phoru",
	"description": "This extension translates the highlighted text from pseudo-phonetics to Russian cyrillic.",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"activeTab",
		"https://ajax.googleapis.com/",
		"<all_urls>"
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["selection.js"],
			"run_at": "document_start",
			"all_frames": true
		}
	]
}
